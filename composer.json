{
  "$schema": "https://getcomposer.org/schema.json",
  "name": "get-memoir/memoir",
  "type": "project",
  "description": "Serious journaling for serious minds",
  "keywords": [
    "laravel",
    "framework",
    "blade"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.4",
    "amirami/localizator": "^0.14.0@alpha",
    "cesargb/laravel-magiclink": "^2.24",
    "codeat3/blade-phosphor-icons": "^2.3",
    "erag/laravel-disposable-email": "^3.5",
    "laravel/framework": "^12.0",
    "laravel/sanctum": "^4.0",
    "laravel/tinker": "^2.10.1",
    "livewire/livewire": "^3.6",
    "pragmarx/google2fa-laravel": "^2.3",
    "resend/resend-laravel": "^0.22.0",
    "spatie/laravel-login-link": "^1.6",
    "stevebauman/purify": "^6.3",
    "willvincent/feeds": "^2.7"
  },
  "require-dev": {
    "barryvdh/laravel-debugbar": "^3.16",
    "fakerphp/faker": "^1.23",
    "larastan/larastan": "^3.3",
    "laravel/boost": "^1.0",
    "laravel/pail": "^1.2.2",
    "laravel/pint": "^1.18",
    "laravel/sail": "^1.41",
    "mockery/mockery": "^1.6",
    "nunomaduro/collision": "^8.6",
    "pestphp/pest": "^4.0",
    "pestphp/pest-plugin-browser": "^4.0",
    "pestphp/pest-plugin-profanity": "^4.0",
    "pestphp/pest-plugin-type-coverage": "^4.0",
    "rector/rector": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    },
    "files": [
      "app/Helpers/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi",
      "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
      "@php artisan migrate --graceful --ansi"
    ],
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
    ],
    "test": [
      "@memoir:unit",
      "@memoir:setup",
      "@memoir:locale",
      "@memoir:lint"
    ],
    "precommit": [
      "@memoir:rector",
      "@test",
      "@memoir:static",
      "@memoir:update-blacklist-domains",
      "@memoir:prettier",
      "@memoir:update",
      "@memoir:locale",
      "@memoir:lint",
      "@memoir:type-coverage",
      "@memoir:setup"
    ],
    "memoir:lint": "./vendor/bin/pint",
    "memoir:locale": "php artisan localize en,fr --remove-missing",
    "memoir:prettier": "npx prettier --write resources/",
    "memoir:rector": "./vendor/bin/rector",
    "memoir:setup": "php artisan migrate:fresh && php artisan db:seed",
    "memoir:static": "./vendor/bin/phpstan analyse --memory-limit=256M",
    "memoir:type-coverage": "./vendor/bin/pest --type-coverage --min=100",
    "memoir:update": "composer update && bun update",
    "memoir:update-blacklist-domains": "php artisan erag:sync-disposable-email-list",
    "memoir:unit": "rm -f database/test.sqlite_test* && php artisan migrate:fresh --database=testing && ./vendor/bin/pest --parallel --processes=10"
  },
  "extra": {
    "laravel": {
      "dont-discover": []
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "version": "0.2.0"
}
